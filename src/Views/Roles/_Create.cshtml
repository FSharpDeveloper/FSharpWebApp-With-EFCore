<div id="new-role-section" class="col-lg-6">
    <div class="block">
        <div class="title">
            <strong class="d-block">New Role</strong>
            <span class="d-block"></span></div>
        <div class="block-body">
        <form>
            <div class="form-group">
            <label class="form-control-label">Role Name</label>
            <input type="text" placeholder="" class="form-control" data-bind="textInput: name">
            </div>
            <div class="form-group">       
            <label class="form-control-label">Description</label>
            </div>
            <div class="form-group">       
            <input type="submit" value="Signin" class="btn btn-primary">
            </div>
        </form>
        </div>
    </div>
</div>

<script>
    function RoleViewModel(role){
        var self = this;
        role = role || { id: 0, name:"", users:[]};        
        self.Id = ko.observable(role.id);
        self.Name = ko.observable(role.name);
        self.Users = ko.observableArray(role.users);
    }
    $(document).ready(function(){
        var newRole = new RoleViewModel();
        ko.applyBindings(newRole, document.getElementById("new-role-section"))
    });
</script>